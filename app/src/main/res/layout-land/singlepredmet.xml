<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="90dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingStart="10dp">


    <TextView
        android:id="@+id/Start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:background="#ffffff"
        android:gravity="top"
        android:paddingStart="5dp"
        android:textColor="@color/colorPrimary" />

    <RelativeLayout
        android:id="@+id/heigtsetter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/End"
        android:layout_below="@+id/Start"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:elevation="-1dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:gravity="center_vertical|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:maxWidth="300dp"
                android:text="PredmetPaTip"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start">

                <ImageView
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_group_gray" />

                <TextView
                    android:id="@+id/Grp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="5dp"
                    android:maxWidth="300dp"
                    android:text="Grp"
                    android:textAlignment="center"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                app:layout_constraintStart_toStartOf="@+id/Course"
                app:layout_constraintTop_toTopOf="@+id/Course">

                <ImageView
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_person_gray" />

                <TextView
                    android:id="@+id/Prof"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:maxWidth="300dp"
                    android:text="Prof"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                app:layout_constraintStart_toStartOf="@+id/Course"
                app:layout_constraintTop_toTopOf="@+id/Course">

                <ImageView
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_location_gray" />

                <TextView
                    android:id="@+id/Location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:maxWidth="300dp"
                    android:text="Lokacija"
                    android:textAlignment="center" />

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/End"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ffffff"
        android:gravity="bottom"
        android:paddingStart="5dp"
        android:textColor="@color/colorPrimary" />

</LinearLayout>

