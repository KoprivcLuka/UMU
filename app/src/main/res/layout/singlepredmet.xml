<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-2dp"
    android:elevation="2dp"
    android:minHeight="90dp"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/colortype"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:elevation="5dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="top"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/End"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textColor="#ffffff" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/heigtsetter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical|end"
                android:maxWidth="300dp"
                android:text="PredmetPaTip"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Course"
                android:layout_centerHorizontal="true"
                android:gravity="start">

                <ImageView
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_group_gray" />

                <TextView
                    android:id="@+id/Grp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="5dp"
                    android:maxWidth="300dp"
                    android:text="Grp"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:gravity="start"
                app:layout_constraintStart_toStartOf="@+id/Course"
                app:layout_constraintTop_toTopOf="@+id/Course">

                <ImageView
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_person_gray" />

                <TextView
                    android:id="@+id/Prof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:maxWidth="300dp"
                    android:text="Prof"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout2"
                android:layout_centerHorizontal="true"
                android:gravity="start"
                app:layout_constraintStart_toStartOf="@+id/Course"
                app:layout_constraintTop_toTopOf="@+id/Course">

                <ImageView
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_location_gray" />

                <TextView
                    android:id="@+id/Location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:maxWidth="300dp"
                    android:text="Lokacija"
                    android:textAlignment="center" />

            </LinearLayout>
        </LinearLayout>


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/darker_gray"
            android:elevation="3dp" />

    </RelativeLayout>

</LinearLayout>

